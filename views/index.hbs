<div class="page sign-up">
     <!-- Top Nav Bar -->
     <div class="nav"><div class="close "></div><div class="title">Let's get started </div></div>
     <!-- Content -->

     <!-- Content -->
     <div id="carousel-sign-up" class="carousel slide" data-ride="carousel" data-interval="false" data-wrap="false">

          <!-- Wrapper for slides -->
          <div class="carousel-inner" role="listbox">
               <div class="item email-sign-up active">
                    <div class="container">
                         <p>What's your email address?</p>
                         <div class="form-group">
                              <input type="text" class="form-control email-address" placeholder="Email" maxlength="15">
                              <div class="alert alert-danger alert-regular" style="text-align:center">A user with this email already exists.</div>
                         </div>
                    </div>
               </div>
               <div class="item username-sign-up">
                    <div class="container">
                         <p>What would you like your username to be?</p>
                         <div class="form-group">
                              <input type="text" class="form-control username" placeholder="Username">
                              <div class="alert alert-danger alert-profane" style="text-align:center">This username looks to contain profanity. Please try a new one.</div>
                              <div class="alert alert-danger alert-regular" style="text-align:center">Username is unavailable.</div>
                         </div>
                    </div>
               </div>
               <div class="item avatar-sign-up">
                    <div class="container">
                         <p>Generate your character.</p>
                         <img class="regenerate-avatar-image" src="assets/images/avatars/15.svg" alt="...">
                         <div class="row">
                              <div class="col-xs-1">&nbsp;</div>
                              <div class="col-xs-10">
                                   <a class="btn btn-default regenerate-avatar-btn"> <div class="glyphicon glyphicon-repeat"></div> Regenerate your avatar</a>
                              </div>
                              <div class="col-xs-1">&nbsp;</div>
                         </div>
                    </div>
               </div>
               <div class="item confirmation-sign-up">
                    <div class="container">
                         <div class="carousel-caption">Your character is named blank and you are on team. Click save to create your account.</div>
                    </div>
               </div>
          </div>
     </div>

     <!-- Footer -->
     <div class="intro-footer">
          <div class="row sign-up-button-container disable">
               <div class="col-xs-6">
